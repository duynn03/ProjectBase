<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/root_fragment"
        style="@style/ViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Fragment Sign Up" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            style="@style/InputFilledBoxName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:nextFocusForward="@+id/til_email">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            style="@style/InputFilledBoxEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/til_name"
            android:nextFocusForward="@+id/til_password">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextEmail" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            style="@style/InputFilledBoxPassword"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/til_email"
            android:layout_alignRight="@+id/til_email"
            android:layout_height="wrap_content"
            android:nextFocusForward="@+id/til_confirm_password"
            android:layout_below="@+id/til_email">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_confirm_password"
            style="@style/InputFilledBoxConfirmPassword"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/til_email"
            android:layout_alignRight="@+id/til_email"
            android:layout_height="wrap_content"
            android:nextFocusForward="@+id/til_phoneNumber"
            android:layout_below="@+id/til_password">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextConfirmPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone_number"
            style="@style/InputOutlineBoxPhoneNumber"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/til_email"
            android:layout_alignRight="@+id/til_email"
            android:layout_height="wrap_content"
            android:nextFocusForward="@+id/til_birthday"
            android:layout_below="@+id/til_confirm_password">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/TextInputEditTextPhoneNumber" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_birthday"
            style="@style/InputOutlineBoxBirthDay"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/til_email"
            android:layout_alignRight="@+id/til_email"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_below="@+id/til_phone_number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextBirthDay" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:layout_below="@+id/til_birthday"
            android:layout_alignRight="@+id/til_email"
            android:text="Forgot Password" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:layout_below="@+id/til_birthday"
            android:layout_alignLeft="@+id/til_email"
            android:text="Login" />

        <Button
            android:id="@+id/btn_sign_up"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_forgot_password"
            android:text="Sign Up" />
    </RelativeLayout>

</ScrollView>