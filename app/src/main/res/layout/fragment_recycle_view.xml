<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="adapterSingleType"
            type="android.support.v7.widget.RecyclerView.Adapter" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_fragment"
        style="@style/ViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Fragment RecycleView" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_single_item"
            style="@style/RecycleViewLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            app:adapter="@{adapterSingleType}"
            tools:listitem="@layout/fragment_recycle_view_single_type_item" />

    </RelativeLayout>

</layout>