<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/root_fragment"
        style="@style/ViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Fragment Notification" />

        <Button
            android:id="@+id/btn_show_notification_big_text"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Show Notification Big text" />

        <Button
            android:id="@+id/btn_show_notification_text_multi_line"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_big_text"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Text Multi Line" />

        <Button
            android:id="@+id/btn_show_notification_text_style_message"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_text_multi_line"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Text Style Message" />

        <Button
            android:id="@+id/btn_show_notification_big_image_1"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_text_style_message"
            android:layout_centerHorizontal="true"
            android:text="Show Notification big image 1" />

        <Button
            android:id="@+id/btn_show_notification_big_image_2"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_big_image_1"
            android:layout_centerHorizontal="true"
            android:text="Show Notification big image 2" />

        <Button
            android:id="@+id/btn_show_notification_big_image_3"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_big_image_2"
            android:layout_centerHorizontal="true"
            android:text="Show Notification big image 3" />

        <Button
            android:id="@+id/btn_show_notification_control_media"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_big_image_3"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Control Media" />

        <Button
            android:id="@+id/btn_show_notification_group"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_control_media"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Group" />

        <Button
            android:id="@+id/btn_show_notification_badge"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_group"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Badge" />

        <Button
            android:id="@+id/btn_show_notification_action"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_badge"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Action" />

        <Button
            android:id="@+id/btn_show_notification_reply_action"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_action"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Reply Action" />

        <Button
            android:id="@+id/btn_show_notification_progressbar"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_reply_action"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Progressbar" />

        <Button
            android:id="@+id/btn_show_notification_progressbar_increase"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_progressbar"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Progressbar Increase" />

        <Button
            android:id="@+id/btn_show_notification_lock_screen_hidden_content"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_progressbar_increase"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Lock Screen Hidden Content" />

        <Button
            android:id="@+id/btn_show_notification_setting_other"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_lock_screen_hidden_content"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Setting Other" />

        <Button
            android:id="@+id/btn_show_notification_open_regular_activity"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_setting_other"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Open Regular Activity" />

        <Button
            android:id="@+id/btn_show_notification_open_special_activity"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_open_regular_activity"
            android:layout_centerHorizontal="true"
            android:text="Show Notification Open Special Activity" />

        <Button
            android:id="@+id/btn_update_notification"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_show_notification_open_special_activity"
            android:layout_centerHorizontal="true"
            android:text="Update Notification" />

        <Button
            android:id="@+id/btn_remove_notification"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_update_notification"
            android:layout_centerHorizontal="true"
            android:text="Remove Notification" />

        <Button
            android:id="@+id/btn_remove_notification_timeout"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_remove_notification"
            android:layout_centerHorizontal="true"
            android:text="Remove Notification - TimeOut" />

        <Button
            android:id="@+id/btn_remove_all_notification"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_remove_notification_timeout"
            android:layout_centerHorizontal="true"
            android:text="Remove All Notification" />

        <Button
            android:id="@+id/btn_open_setting_notification_channel"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_remove_all_notification"
            android:layout_centerHorizontal="true"
            android:text="Open Settings Notification Channel" />

        <Button
            android:id="@+id/btn_get_all_channel"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_open_setting_notification_channel"
            android:layout_centerHorizontal="true"
            android:text="Get All Channel" />

        <Button
            android:id="@+id/btn_get_channel_by_id"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_get_all_channel"
            android:layout_centerHorizontal="true"
            android:text="Get Channel By ID" />

        <Button
            android:id="@+id/btn_delete_channel"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_get_channel_by_id"
            android:layout_centerHorizontal="true"
            android:text="Delete Channel" />

        <Button
            android:id="@+id/btn_custom_notification"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_delete_channel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="Custom Notification" />

    </RelativeLayout>
</ScrollView>