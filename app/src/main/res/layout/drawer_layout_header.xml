<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_drawer_layout_header"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/drawer_layout_header_padding_top"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/im_user_avatar"
        style="@style/ImageAvatar"
        android:layout_width="@dimen/drawer_layout_header_avatar_user_width_height"
        android:layout_height="@dimen/drawer_layout_header_avatar_user_width_height"
        android:src="@mipmap/ic_launcher_round"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_user_avatar"
        android:paddingTop="@dimen/drawer_layout_header_vertical_spacing"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv_user_email"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:paddingTop="@dimen/drawer_layout_header_vertical_spacing"
        android:text="" />

</RelativeLayout>
