<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Fragment Forgot password"
        android:textSize="@dimen/font_size_text_22dp" />

    <Button
        android:id="@+id/btn_forgot_password_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_sign_up"
        android:text="Send me link" />

    <Button
        android:id="@+id/btn_back_to_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="back to Login" />

</RelativeLayout>