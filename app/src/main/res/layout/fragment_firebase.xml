<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_fragment"
    style="@style/ViewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Fragment Firebase" />

    <Button
        android:id="@+id/btn_generate_crash"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Crash" />

    <Button
        android:id="@+id/btn_subscribe"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_generate_crash"
        android:layout_centerHorizontal="true"
        android:text="Subscribe" />

    <Button
        android:id="@+id/btn_unsubscribe"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_subscribe"
        android:layout_centerHorizontal="true"
        android:text="Unsubscribe" />

    <Button
        android:id="@+id/btn_trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unsubscribe"
        android:layout_centerHorizontal="true"
        style="@style/Button"
        android:text="Test trace" />

    <ImageView
        android:id="@+id/im_gallery"
        style="@style/Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/btn_generate_crash"
        android:layout_centerHorizontal="true" />

</RelativeLayout>