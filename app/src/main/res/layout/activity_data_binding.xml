                       android:id="@+id/tv_data_binding_map"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/tv_data_binding_sparse_array"
                       android:layout_centerInParent="true"
                       tools:text="@{map[key]}" />-->

            <TextView
                android:id="@+id/tv_data_binding_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="@{user.firstName, default=Null}"
                tools:text="@{user.firstName, default=Null}" />

            <Button
                android:id="@+id/btn_data_binding_method_reference"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_data_binding_first_name"
                android:layout_centerHorizontal="true"
                android:onClick="@{activity::onClickButtonMethodReference}"
                android:text="Binding Event Method Reference" />

            <Button
                android:id="@+id/btn_data_binding_listener_binding"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_data_binding_method_reference"
                android:layout_centerHorizontal="true"
                android:onClick="@{() -> activity.onClickButtonListenerBinding(user)}"
                android:text="Binding Event Listener Binding" />

            <Button
                android:id="@+id/btn_data_binding_listener_binding_expression"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_data_binding_listener_binding"
                android:layout_centerHorizontal="true"
                android:onClick="@{(view) -> activity.isUserDuy(user) ? activity.onClickButtonMethodReference(view) : activity.onClickButtonListenerBinding(user)}"
                android:text="Binding Event Listener Binding Expression" />

            <!--<include layout="@layout/name"
                bind:user="@{user}"/>-->

            <TextView
                android:id="@+id/tv_obsverable_field_first_name"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_data_binding_listener_binding_expression"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@{userObservableField.firstName + userObservableField.age, default=Null}" />

            <Button
                android:id="@+id/btn_change_user_first_name_field"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_obsverable_field_first_name"
                android:layout_centerHorizontal="true"
                android:onClick="@{() -> activity.onClickButtonChangeFirstNameObservableFieldUser(userObservableField)}"
                android:text="Change User First Name Observable Field" />

            <TextView
                android:id="@+id/tv_obsverable_object_first_name"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_change_user_first_name_field"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@{userObservableObject.firstName, default=Null}" />

            <Button
                android:id="@+id/btn_change_user_first_name_object"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_obsverable_object_first_name"
                android:layout_centerHorizontal="true"
                android:onClick="@{() -> activity.onClickButtonChangeFirstNameObservableObjectUser(userObservableObject)}"
                android:text="Change User First Name Observable Object" />

            <TextView
                android:id="@+id/tv_binding_logic"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_change_user_first_name_object"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Binding Logic" />

            <com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.BindingLogicView
                android:id="@+id/bdv_binding_adapter_logic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_binding_logic"
                android:layout_centerHorizontal="true"
                app:color="@{colorDataBindingSetter}" />

            <!--binding adapter-->
            <ImageView
                android:id="@+id/im_binding_adapter"
                style="@style/Image"
                android:layout_below="@+id/bdv_binding_adapter_logic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:imageUrl="@{imageUrl}"
                app:layout_height="@{70}"
                app:layout_width="@{70}"
                app:placeHolder="@{@drawable/ic_splash}"
                tools:layout_height="70dp"
                tools:layout_width="70dp" />

            <TextView
                android:id="@+id/tv_padding"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_binding_adapter"
                android:background="@android:color/holo_blue_bright"
                android:text="Padding Left Adapter"
                app:layout_marginLeft="@{30}"
                tools:layout_marginLeft="30dp" />

            <!--two way binding-->
            <CheckBox
                android:id="@+id/rememberMeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_padding"
                android:layout_centerHorizontal="true"
                android:checked="@={twoWayBinding.isCheckTwoWay}" />

            <TextView
                android:id="@+id/tv_value_checkbox"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rememberMeCheckBox"
                android:layout_centerHorizontal="true"
                android:text="@{String.valueOf(twoWayBinding.isCheckTwoWay), default=Null}"
                tools:text="Value Checkbox" />

            <!--TODO-->
            <!--<EditText
                android:layout_below="@+id/tv_value_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                app:realValue="@={customTwoWayBinding.number}" /> -->

        </RelativeLayout>
    </ScrollView>
</layout>