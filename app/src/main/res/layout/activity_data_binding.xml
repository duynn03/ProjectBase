        <variable
            name="user"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.User" />

        <variable
            name="activity"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.DataBindingActivity" />

        <variable
            name="userObservableField"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.UserObservableField" />

        <variable
            name="userObservableObject"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.UserObservableObject" />

        <variable
            name="colorDataBindingSetter"
            type="Integer" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="twoWayBinding"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.twowayBinding.TwoWayBinding" />

        <variable
            name="customTwoWayBinding"
            type="com.example.nguyenduy.projectbase.screen.main.architectureComponents.dataBinding.activity.twowayBinding.CustomTwoWayBinding" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/root_activity"
            style="@style/ViewRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Activity Data Binding" />

            <!--       <TextView
                       android:id="@+id/tv_data_binding_list"
                       android:layout_width="wrap_content"
                       android:layout_below="@+id/tv_data_binding_first_name"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       tools:text="@{list[index]}" />

                   <TextView
                       android:id="@+id/tv_data_binding_sparse_array"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/tv_data_binding_list"
                       android:layout_centerInParent="true"
                       tools:text="@{sparse[index]}" />

                   &lt;!&ndash;Có thể sử dụng map[key] hoặc {map.key}&ndash;&gt;
