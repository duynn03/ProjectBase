<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Fragment Service" />

    <Button
        android:id="@+id/btn_start_background_service"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Start Background Service" />

    <Button
        android:id="@+id/btn_start_foreground_service"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_background_service"
        android:layout_centerHorizontal="true"
        android:text="Start Foreground Service" />

    <Button
        android:id="@+id/btn_stop_foreground_service"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_foreground_service"
        android:layout_centerHorizontal="true"
        android:text="Stop Foreground Service" />

</RelativeLayout>