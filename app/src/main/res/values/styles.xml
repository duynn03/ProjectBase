<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Theme for SharedPreference fragment-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SharedPreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.FullStatusBar" parent="AppTheme" />

    <!-- The launcher theme.-->
    <!--https://android.jlelse.eu/the-complete-android-splash-screen-guide-c7db82bce565-->
    <style name="AppTheme.FullStatusBar.Launcher" parent="AppTheme.FullStatusBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!--progressbar loading-->
    <style name="ProgressBarDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--drawer layout-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--style common-->
    <style name="Image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageAvatar" parent="Image"></style>

    <style name="TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/font_size_text_20sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:textColor">@android:color/black</item>-->
    </style>

    <style name="Button" parent="TextView">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="TextView">
        <!--<item name="android:textCursorDrawable">@drawable/color_cursor_edittext</item>-->
    </style>

    <!--input text-->
    <style name="InputFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="InputFilledBoxName" parent="InputFilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@string/name_length_max</item>
    </style>

    <style name="InputFilledBoxEmail" parent="InputFilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@string/email_length_max</item>
    </style>

    <style name="InputFilledBoxPassword" parent="InputFilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@string/password_length_max</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/ic_menu_help</item>
    </style>

    <style name="InputFilledBoxConfirmPassword" parent="InputFilledBoxPassword"></style>

    <style name="InputOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- boxCornerRadiusTopLeft
         boxCornerRadiusTopRight
         boxCornerRadiusBottomLeft
         boxCornerRadiusBottomRight-->
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="InputOutlineBoxPhoneNumber" parent="InputOutlineBox">

    </style>

    <style name="InputOutlineBoxBirthDay" parent="InputOutlineBox">

    </style>

    <style name="TextInputEditText">
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TextInputEditTextName" parent="TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_name</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/hint_name</item>
    </style>

    <style name="TextInputEditTextEmail" parent="TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/hint_email</item>
    </style>

    <style name="TextInputEditTextPassword" parent="TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="TextInputEditTextConfirmPassword" parent="TextInputEditTextPassword">
        <item name="android:hint">@string/hint_confirm_password</item>
    </style>

    <style name="TextInputEditTextPhoneNumber" parent="TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_phone_number</item>
        <item name="android:inputType">phone</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/hint_phone_number</item>
    </style>

    <style name="TextInputEditTextBirthDay" parent="TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_birth_day</item>
        <item name="android:inputType">date</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/hint_birth_day</item>
    </style>

    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
    </style>

</resources>
