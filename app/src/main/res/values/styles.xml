<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Theme for SharedPreference fragment-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SharedPreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.FullStatusBar" parent="AppTheme" />

    <!-- The launcher theme.-->
    <!--https://android.jlelse.eu/the-complete-android-splash-screen-guide-c7db82bce565-->
    <style name="AppTheme.FullStatusBar.Launcher" parent="AppTheme.FullStatusBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!--progressbar loading-->
    <style name="ProgressBarDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--drawer layout-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--style common-->
    <style name="Image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageAvatar" parent="Image"></style>

    <style name="TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/font_size_text_20sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:textColor">@android:color/black</item>-->
    </style>

    <style name="Button" parent="TextView">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="TextView">
        <!--<item name="android:textCursorDrawable">@drawable/color_cursor_edittext</item>-->
    </style>

    <!--input text-->
    <style name="InputFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="InputFilledBoxEmail" parent="InputFilledBox">
        <item name="hintEnabled">true</item>
        <item name="android:hint">@string/hint_email</item>
        <item name="errorEnabled">true</item>
        <!--        <item name="helperTextEnabled">true</item>-->
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
    </style>

    <style name="AutoCompleteTextViewEmail">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:lines">1</item>
    </style>

    <style name="InputFilledBoxPassword" parent="InputFilledBox">
        <item name="hintEnabled">true</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">16</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/ic_launcher_background</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:inputType">textPassword</item>
        <item name="android:lines">1</item>
    </style>

    <style name="InputOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- boxCornerRadiusTopLeft
         boxCornerRadiusTopRight
         boxCornerRadiusBottomLeft
         boxCornerRadiusBottomRight-->
    </style>

    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
    </style>

</resources>
